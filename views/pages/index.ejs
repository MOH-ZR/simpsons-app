<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../layout/head') %>
</head>

<body>
    <header>
        <%- include('../layout/header') %>
    </header>
    <main>
        <% quotes.forEach((quote) => { %>
            <section>
                <p>
                    <%= quote.quote %>
                </p>
                <p>
                    <%= quote.character %>
                </p>

                <img src=<%=quote.image %>>

                <p>
                    <%= quote.characterDirection %>
                </p>
                <form action="/quote" method="post">
                    <input type="hidden" name="quote" value="<%= quote.quote %>">
                    <input type="hidden" name="character" value="<%= quote.character %>">
                    <input type="hidden" name="image" value="<%= quote.image %>">
                    <input type="hidden" name="characterDirection" value="<%= quote.characterDirection %>">
                    <input type="submit" value="save">
                </form>
            </section>
            <% }) %>
    </main>
    <footer>
        <%- include('../layout/footer') %>
    </footer>
</body>

</html>